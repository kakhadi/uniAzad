<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerView4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AppBackground"
    android:orientation="vertical"
    tools:context=".PhoneActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--Header-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/AppFirstColor"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/irsans_b"
                android:text="@string/HeaderText"
                android:textColor="@color/TextColorWhite"
                android:textSize="17sp" />

            <ImageView
                android:id="@+id/DrawerBtn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:src="@mipmap/menu" />


        </LinearLayout>

        <!--Shomareha-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--radife aval-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="044-46281509"
                    android:textColor="#000"
                    android:fontFamily="@font/irsans_m"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="واحد مالی : "
                    android:textColor="#000"
                    android:fontFamily="@font/irsans_b"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <!--View-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#aa000000"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"></LinearLayout>

            <!--radife 2-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="044-46281509"
                    android:textColor="#000"
                    android:fontFamily="@font/irsans_m"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="آموزش : "
                    android:textColor="#000"
                    android:fontFamily="@font/irsans_b"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>

            <!--View-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#aa000000"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"></LinearLayout>

            <!--radife 3-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="044-46281509"
                    android:textColor="#000"
                    android:fontFamily="@font/irsans_m"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="حراست : "
                    android:textColor="#000"
                    android:fontFamily="@font/irsans_b"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"/>

            </LinearLayout>



        </LinearLayout>


    </LinearLayout>


        <fragment
            class="com.sherko.daneshgahazadboukan.feregment_meno"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@color/AppBackground"
            android:orientation="vertical">

        </fragment>



</android.support.v4.widget.DrawerLayout>