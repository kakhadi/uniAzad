<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <!--Drawer-->
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/AppBackground"
        android:orientation="vertical">

        <!--Header-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@mipmap/nav_back"
            android:orientation="vertical">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@mipmap/nav_avatar"
                android:elevation="15dp" />


            <TextView
                android:id="@+id/txtName"
                style="@style/AudioFileInfoOverlayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/irsans_b"
                android:text="شیرکو فرجی"
                android:textColor="@color/TextColorWhite"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txtMaqtae"
                style="@style/AudioFileInfoOverlayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-2dp"
                android:fontFamily="@font/irsans_m"
                android:text="کارشناسی ناپیوسته"
                android:textColor="@color/TextColorWhite"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtReshte"
                style="@style/AudioFileInfoOverlayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-2dp"
                android:fontFamily="@font/irsans_m"
                android:text="مهندسی تکنولوژی نرم افزار کامپیوتر"
                android:textColor="@color/TextColorWhite"
                android:textSize="13sp" />


        </LinearLayout>


        <!--bouttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">

            <Button
                android:onClick="clkBarnama"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#d7d5d5"
                android:fontFamily="@font/irsans_m"
                android:text="بــــرنـــامـــــه ی کـــــــلاســـی"
                android:textColor="#1d1d1d"
                android:textStyle="bold"/>

            <Button
                android:onClick="clkChart"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/AppBackground"
                android:fontFamily="@font/irsans_m"
                android:text="چـــــــــــــارت درســـــــــــــی"
                android:textColor="#1d1d1d"
                android:textStyle="bold" />

            <Button
                android:onClick="clkPhone"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/AppBackground"
                android:fontFamily="@font/irsans_m"
                android:text="دفـــــتــــرچــــه تــــلــــفــــن"
                android:textColor="#1d1d1d"
                android:textStyle="bold"></Button>

            <Button
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/AppBackground"
                android:fontFamily="@font/irsans_m"
                android:text="لــــیـــــســـــت اســـاتــــیــــد"
                android:textColor="#1d1d1d"
                android:textStyle="bold"></Button>

            <Button
                android:onClick="clkHeyat"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/AppBackground"
                android:fontFamily="@font/irsans_m"
                android:text="اعـــضـــای هــیــئــت عــلــمــی"
                android:textColor="#1d1d1d"
                android:textStyle="bold"></Button>

            <Button
                android:onClick="clkAbout"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/AppBackground"
                android:fontFamily="@font/irsans_m"
                android:text="درباره ی ما"
                android:textColor="#1d1d1d"
                android:textStyle="bold"></Button>


        </LinearLayout>


    </LinearLayout>




</android.support.constraint.ConstraintLayout>